<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <li><% @users.each do |user| %>
    <% if current_user.admin? && !current_user?(user) %>
      <%= link_to user.name, user %>
      <%= user.email %>
        <%= link_to "delete", user, method: :delete,
                                      data: { confirm: "You sure?" } %>
        <%if user.admin? %>
          <%= button_to " change to normal user", user_set_to_normal_user_path(user)%>
        <% else %>
          <%= button_to "change to admin", user_create_admin_path(user) %>
        <% end %>
      <% end %>
    <% end %>
  </li>
</ul>


